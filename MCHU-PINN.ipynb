import pandas as pd
import numpy as np
import torch
import random
torch.manual_seed(42)
np.random.seed(42)
random.seed(42)
def to_tensor(x):
    return torch.tensor(x, dtype=torch.float32)

# ==== 可自定义各部分采样数量（分区设置，单位：点数）====
N_IC      = 6000                  # 初始条件点
N_DATA    = 2000                 # 数据监督点

# Dirichlet/Neumann/PDE分段采样（6s内/外）
N_BC_IN   = 1000     # 6s内 Dirichlet
N_BC_OUT  = 4000      # 6s外 Dirichlet
N_NEU_IN  = 1000     # 6s内 Neumann
N_NEU_OUT = 6000      # 6s外 Neumann
N_FAULT_IN  = 7000   # 6s内 PDE（断层区）
N_FAULT_OUT = 10000   # 6s外 PDE（断层区）
N_REST_IN   = 3000   # 6s内 PDE（非断层区）
N_REST_OUT  = 20000   # 6s外 PDE（非断层区）

# 不确定性正则点（分6s内/外）
N_UQ_IN = 0
N_UQ_OUT = 8000

# ==== 数据读取 ====
df_full = pd.read_csv("../autodl-tmp/dataset_pinn.csv")
df = df_full[df_full["t"] <= 60].copy()

# ==== 边界定义 ====
X_MIN, X_MAX = 0.0, 10.0
Y_MIN, Y_MAX = 0.0, 6.0

# ==== 1. 初始条件点（t = 0），剔除 Dirichlet 和 Neumann 边界点 ====
df_ic = df[df['t'] == 0.0].copy()
is_dirichlet_ic = (np.abs(df_ic['y'] - Y_MAX) < 1e-5) | \
                  ((df_ic['y'] < 1e-5) & df_ic['x'].between(4.0, 6.0))
is_neumann_ic = (df_ic['x'] < 1e-5) | \
                (np.abs(df_ic['x'] - X_MAX) < 1e-5) | \
                ((df_ic['y'] < 1e-5) & ((df_ic['x'] < 4.0) | (df_ic['x'] > 6.0)))
df_ic = df_ic[~(is_dirichlet_ic | is_neumann_ic)]
if N_IC < len(df_ic):
    df_ic = df_ic.sample(n=N_IC, random_state=1)
X_ic = to_tensor(df_ic[['x', 'y', 't']].values)
h_ic = to_tensor(np.ones((X_ic.shape[0], 1), dtype=np.float32))

# ==== 2. Dirichlet 边界点（6s内/外分区）====
bc_top = np.abs(df['y'] - Y_MAX) < 1e-5
bc_bottom_fault = (df['y'] < 1e-5) & df['x'].between(4.0, 6.0)
df_bc = df[(bc_top | bc_bottom_fault)].copy()
df_bc_in = df_bc[df_bc["t"] <= 6.0]
df_bc_out = df_bc[df_bc["t"] > 6.0]
df_bc_in = df_bc_in.sample(n=min(N_BC_IN, len(df_bc_in)), random_state=12)
df_bc_out = df_bc_out.sample(n=min(N_BC_OUT, len(df_bc_out)), random_state=13)
df_bc_final = pd.concat([df_bc_in, df_bc_out])
X_bc = to_tensor(df_bc_final[['x', 'y', 't']].values)
h_bc = to_tensor(df_bc_final['h'].values.reshape(-1, 1))

# ==== 3. Neumann 边界点（6s内/外分区），剔除 Dirichlet 重合点 ====
neu_left = df['x'] < 1e-5
neu_right = np.abs(df['x'] - X_MAX) < 1e-5
neu_bottom = (df['y'] < 1e-5) & ((df['x'] < 4.0) | (df['x'] > 6.0))
df_neu_all = df[(neu_left | neu_right | neu_bottom)].copy()
bc_set = set(df_bc_final[['x', 'y', 't']].apply(tuple, axis=1))
df_neu = df_neu_all[~df_neu_all[['x', 'y', 't']].apply(tuple, axis=1).isin(bc_set)]
df_neu_in = df_neu[df_neu["t"] <= 6.0]
df_neu_out = df_neu[df_neu["t"] > 6.0]
df_neu_in = df_neu_in.sample(n=min(N_NEU_IN, len(df_neu_in)), random_state=14)
df_neu_out = df_neu_out.sample(n=min(N_NEU_OUT, len(df_neu_out)), random_state=15)
df_neu_final = pd.concat([df_neu_in, df_neu_out])
X_neu = to_tensor(df_neu_final[['x', 'y', 't']].values)

# ==== 4. PDE 控制点（6s内/外，剔除IC/BC/Neumann）====
bc_coords = df_bc_final[['x', 'y', 't']].drop_duplicates()
neu_coords = df_neu_final[['x', 'y', 't']].drop_duplicates()
ic_coords = df_ic[['x', 'y', 't']].drop_duplicates()
df_pde_candidates = df.copy()
df_pde_candidates = df_pde_candidates.merge(bc_coords, on=["x", "y", "t"], how='left', indicator=True)
df_pde_candidates = df_pde_candidates[df_pde_candidates["_merge"] == "left_only"].drop(columns=["_merge"])
df_pde_candidates = df_pde_candidates.merge(neu_coords, on=["x", "y", "t"], how='left', indicator=True)
df_pde_candidates = df_pde_candidates[df_pde_candidates["_merge"] == "left_only"].drop(columns=["_merge"])
df_pde_candidates = df_pde_candidates.merge(ic_coords, on=["x", "y", "t"], how='left', indicator=True)
df_pde_candidates = df_pde_candidates[df_pde_candidates["_merge"] == "left_only"].drop(columns=["_merge"])
# 分区
df_pde_in = df_pde_candidates[df_pde_candidates["t"] <= 6.0]
df_pde_out = df_pde_candidates[df_pde_candidates["t"] > 6.0]

df_fault_zone_in = df_pde_in[(df_pde_in["x"].between(4.0, 6.0)) & (df_pde_in["y"] <= 2.0)]
df_rest_zone_in = df_pde_in[~df_pde_in.index.isin(df_fault_zone_in.index)]
df_fault_zone_out = df_pde_out[(df_pde_out["x"].between(4.0, 6.0)) & (df_pde_out["y"] <= 2.0)]
df_rest_zone_out = df_pde_out[~df_pde_out.index.isin(df_fault_zone_out.index)]

df_fault_zone_in = df_fault_zone_in.sample(n=min(N_FAULT_IN, len(df_fault_zone_in)), random_state=21)
df_rest_zone_in = df_rest_zone_in.sample(n=min(N_REST_IN, len(df_rest_zone_in)), random_state=22)
df_fault_zone_out = df_fault_zone_out.sample(n=min(N_FAULT_OUT, len(df_fault_zone_out)), random_state=23)
df_rest_zone_out = df_rest_zone_out.sample(n=min(N_REST_OUT, len(df_rest_zone_out)), random_state=24)

df_f = pd.concat([df_fault_zone_in, df_rest_zone_in, df_fault_zone_out, df_rest_zone_out])
X_f = to_tensor(df_f[["x", "y", "t"]].values)

# ==== 5. 数据监督点（t ∈ {0, 2, 4, 6}），Neumann 区域 1000 + 其他区域 1000 ==== 
df_supervised = df[df["t"].isin([0.0, 2.0, 4.0, 6.0])].copy()

neu_left_data = df_supervised["x"] < 1e-5
neu_right_data = np.abs(df_supervised["x"] - X_MAX) < 1e-5
neu_bottom_data = (df_supervised["y"] < 1e-5) & (
    (df_supervised["x"] < 4.0) | (df_supervised["x"] > 6.0)
)
neu_mask_data = neu_left_data | neu_right_data | neu_bottom_data

df_data_neu_candidates  = df_supervised[neu_mask_data].copy()
df_data_rest_candidates = df_supervised[~neu_mask_data].copy()

N_DATA_NEU_TARGET = N_DATA // 2          # 1000
n_neu_avail = len(df_data_neu_candidates)
n_neu_pick = min(N_DATA_NEU_TARGET, n_neu_avail)

df_data_neu = df_data_neu_candidates.sample(n=n_neu_pick, random_state=2024)

N_DATA_REST_TARGET = N_DATA - n_neu_pick
n_rest_avail = len(df_data_rest_candidates)
n_rest_pick = min(N_DATA_REST_TARGET, n_rest_avail)

df_data_rest = df_data_rest_candidates.sample(n=n_rest_pick, random_state=2025)

df_data = pd.concat([df_data_neu, df_data_rest], axis=0)
df_data = df_data.sample(frac=1.0, random_state=2026).reset_index(drop=True)

X_data = to_tensor(df_data[["x", "y", "t"]].values)
h_data = to_tensor(df_data["h"].values.reshape(-1, 1))

# ==== 6. 不确定性正则点（UQ点，6s内/外，各自剔除所有上面用过的点）====
used_coords = pd.concat([
    df_ic[['x', 'y', 't']],
    df_bc_final[['x', 'y', 't']],
    df_neu_final[['x', 'y', 't']],
    df_f[['x', 'y', 't']],
    df_data[['x', 'y', 't']]
]).drop_duplicates()

df_uq_candidates = df.copy()
df_uq_candidates = df_uq_candidates.merge(used_coords, on=["x", "y", "t"], how='left', indicator=True)
df_uq_candidates = df_uq_candidates[df_uq_candidates["_merge"] == "left_only"].drop(columns=["_merge"])

# 6s内
df_uq_in_candidates = df_uq_candidates[df_uq_candidates["t"] <= 6.0]
df_uq_in = df_uq_in_candidates.sample(n=min(N_UQ_IN, len(df_uq_in_candidates)), random_state=555)
# 6s外
df_uq_out_candidates = df_uq_candidates[df_uq_candidates["t"] > 6.0]
df_uq_out = df_uq_out_candidates.sample(n=min(N_UQ_OUT, len(df_uq_out_candidates)), random_state=556)
# 合并
df_uq_final = pd.concat([df_uq_in, df_uq_out])
X_uq = to_tensor(df_uq_final[["x", "y", "t"]].values)

# ==== 打印统计信息 ====
print("✅ 数据划分完成（t ∈ [0, 60]，分段采样）：")
print(f"初始条件点数（IC）:            {X_ic.shape[0]}（内部点，h=1m）")
print(f"Dirichlet边界点（BC）:        {X_bc.shape[0]}（6s内: {df_bc_in.shape[0]}，6s外: {df_bc_out.shape[0]}）")
print(f"Neumann无流边界点:           {X_neu.shape[0]}（6s内: {df_neu_in.shape[0]}，6s外: {df_neu_out.shape[0]}）")
print(f"PDE残差点（Collocation）:     {X_f.shape[0]}（6s内-fault: {df_fault_zone_in.shape[0]}, 6s内-rest: {df_rest_zone_in.shape[0]}, 6s外-fault: {df_fault_zone_out.shape[0]}, 6s外-rest: {df_rest_zone_out.shape[0]})")
print(f"监督数据点（Data Points）:    {X_data.shape[0]}（t=0,2,4,6）")
print(f"不确定性正则点（UQ）:         {X_uq.shape[0]}（6s内: {df_uq_in.shape[0]}，6s外: {df_uq_out.shape[0]}）")
